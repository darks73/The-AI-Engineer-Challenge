{
    "version": 2,
    "builds": [
      { 
        "src": "frontend/package.json", 
        "use": "@vercel/next",
        "config": { "distDir": ".next" }
      },
      { 
        "src": "api/app.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "50mb" }
      }
    ],
    "routes": [
      { 
        "src": "/api/(.*)", 
        "dest": "/api/app.py"
      },
      { 
        "src": "/(.*)", 
        "dest": "/frontend/$1"
      }
    ],
    "env": {
      "PYTHON_VERSION": "3.9"
    }
  } 